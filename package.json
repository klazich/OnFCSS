{
  "name": "on-functional-css",
  "version": "1.2.0",
  "main": "index.js",
  "repository": "https://github.com/klazich/on-functional-css.git",
  "author": "Kevin Lazich <dev@kevinlazich.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.4",
    "css-mqpacker": "^6.0.2",
    "cssnano": "^3.10.0",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-htmlmin": "^4.0.0",
    "gulp-imagemin": "^4.1.0",
    "gulp-inline": "^0.1.3",
    "htmlnano": "^0.1.7",
    "husky": "^0.14.3",
    "immutable-css": "^1.1.2",
    "lodash": "^4.17.5",
    "perfectionist": "^2.4.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-font-magician": "^2.1.0",
    "postcss-import": "^11.1.0",
    "postcss-pxtorem": "^4.0.1",
    "postcss-reporter": "^5.0.0",
    "postcss-uncss": "^0.16.1",
    "posthtml-img-autosize": "^0.1.2",
    "posthtml-inline-assets": "^2.0.0",
    "posthtml-load-plugins": "^0.11.8",
    "prettier": "^1.11.1",
    "pretty-quick": "^1.4.1",
    "tachyons": "^4.9.1",
    "uncss": "^0.16.1",
    "webpack": "^4.0.1"
  },
  "dependencies": {
    "browser-sync": "^2.23.6",
    "postcss-cli": "^5.0.0",
    "posthtml-cli": "^0.4.6",
    "posthtml-tidy": "^0.8.0"
  },
  "scripts": {
    "postcss": "postcss src/css/*.css -d tmp/css -m --verbose",
    "postcss:prod":
      "postcss tmp/css/*.css -d dist/css -m --ext min.css --env production --verbose",
    "posthtml":
      "posthtml src/index.html -o tmp/index.html -c posthtml.config.js",
    "posthtml:prod": "",
    "start": "cross-env NODE_ENV=development gulp start",
    "build:dev": "cross-env NODE_ENV=development gulp build",
    "build:prod": "cross-env NODE_ENV=production gulp build",
    "predeploy": "yarn run build:prod",
    "deploy":
      "git add dist && git commit -m \"Build site\" && git subtree push --prefix dist origin gh-pages",
    "prettier": "prettier --write \"**/*.{js,css,json,md}\"",
    "precommit": "pretty-quick --staged"
  }
}
